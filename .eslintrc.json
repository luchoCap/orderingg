{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Table": true,
        "API": true,
        "Handlebars": true,
        "Select": true,
        "Modal": true
    },
    "rules": {
        "semi": 2,

        "camelcase": 1,
        "comma-dangle": 2,
        "no-cond-assign": 2,
        "no-constant-condition": 2,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-empty": 2,
        "no-ex-assign": 2,
        "no-extra-boolean-cast": 2,
        "no-extra-semi": 2,
        "no-obj-calls": 2,
        "no-sparse-arrays": 2,
        "no-unexpected-multiline": 2,
        "no-unreachable": 2,
        "no-unsafe-finally": 2,
        "use-isnan": 2,
        "valid-typeof": 2,

        "array-callback-return": 1,
        "block-scoped-var": 1,
        "complexity": ["error", {"max": 10}],
        "curly": 1,
        "default-case": 1,
        "eqeqeq": 2,
        "guard-for-in": 2,
        "no-case-declarations": 2,
        "no-else-return": 1,
        "no-empty-function": 1,
        "no-eq-null": 1,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-extra-bind": 1,
        "no-fallthrough": 2,
        "no-floating-decimal": 2,
        "no-implicit-globals": 2,
        "no-lone-blocks": 2,
        "no-loop-func": 1,
        "no-multi-spaces": 2,
        "no-multi-str": 2,
        "no-native-reassign": 2,
        "no-redeclare": 2,
        "no-return-assign": 2,
        "no-self-assign": 2,
        "no-self-compare": 2,
        "no-sequences": 2,
        "no-throw-literal": 2,
        "no-useless-call": 1,
        "yoda": 1,

        "no-undef": 2,
        "no-unused-vars": 1,

        "indent": 2,
        "max-statements": ["warn", {"max": 30}, {"ignoreTopLevelFunctions": true}],
        "max-params": ["warn", {"max": 3}],
        "max-len": ["warn", {"code": 120, "tabWidth": 4}],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ]
    }
}
